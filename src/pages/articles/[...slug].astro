---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/ArticlesLayout.astro';



export async function getStaticPaths() {
  const posts = await getCollection('articles');
  return posts
    .filter(post => !post.data.draft)
    .map(post => ({
      params: {
        // conserve le dernière partie après slash
        slug: post.slug.split("/").slice(-1)[0],    // replace(/\//g, '-')
      },
    }));
}

const { slug } = Astro.params;

// Recomposez le slug original si besoin, sinon recherchez directement sur la version nettoyée
const posts = await getCollection('articles');
const post = posts.find(p => p.slug.split("/").slice(-1)[0] === slug);

if (!post) {
  throw new Error(`Article introuvable pour le slug « ${slug} »`);
}

const { Content } = await post.render();
---

<Layout title={post.data.title} description={post.data.description}>
  <article>
    <h1>{post.data.title}</h1>
    <Content />
  </article>
</Layout>
